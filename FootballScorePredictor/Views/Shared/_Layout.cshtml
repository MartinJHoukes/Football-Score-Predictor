<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Football Forecast</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-md bg-secondary" style="border-radius: 5px">
            <img style="border-radius: 5px" src="~/Images/Football.png" width="100" /><a class="navbar-brand text-white font-italic" style="margin-left: -50px" href="#"> Football Forecast</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button class="btn btn-sm btn-success btn-outline-light m-2" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");"><i class="fa fa-th-list"></i> Premier League Table</button>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-sm btn-warning btn-outline-light m-2" onclick="@("window.location.href='" + @Url.Action("Championship", "Home") + "'");"><i class="fa fa-th-list"></i> Championship Table</button>
                    </li>
                </ul>
            </div>
        </nav>
        
    </div>
    <div class="container body-content bg-light">
        @RenderBody()
        <hr />
        <footer>
            <p class="font-italic small text-secondary">&copy; @DateTime.Now.Year - Football Forecast</p>
            <br />
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
